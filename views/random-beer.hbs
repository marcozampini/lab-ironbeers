<main>
  <section class='beers'>
    {{#each beerFromApi}}
      <article class='beer'>
        <picture>
          <img src='{{this.image_url}}' alt='{{this.name}}' />
        </picture>
        <h3>{{this.name}}</h3>
        <h4>{{this.tagline}}</h4>
        <p>
          {{this.description}}
        </p>
        <h5>Food pairing</h5>
        <ul>
          {{#each this.food_pairing}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
        <h5>Brewers tips</h5>
        <p>
          {{this.brewers_tips}}
        </p>
      </article>
    {{/each}}
  </section>
</main>